<h2>Your account</h2>
<div class="row">
	<div class="span12">
<%= form_for(@user, :url => update_account_path, :method => :post) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited your account from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :name, :placeholder => "Your name on Landlorder", :class => 'span4' %>
  </div>
  <div class="field">
    <%= f.text_field :ll_user_id, :placeholder => "Your Landlord userId", :class => 'span4' %>
  </div>
  <div class="field">
    <%= f.text_field :ll_auth, :placeholder => "Your Landlord auth key", :class => 'span4' %> <i>good luck to get this one :-)</i>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn' %>
  </div>
<% end %>
</div>
</div>